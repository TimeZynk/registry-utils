{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./lib",
        "esModuleInterop": true, // Import non-ES modules as default imports
        "strict": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "alwaysStrict": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "lib", "**/__tests__/*", "**/*.test.ts"]
}
