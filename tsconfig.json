{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": ["ES2022", "DOM"],
        "types": ["node"],
        "typeRoots": ["./lib/typings", "./node_modules/@types", "./node_modules/vitest"],
        "declaration": true,
        "declarationMap": true,
        "outDir": "./lib",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noUncheckedSideEffectImports": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["**/*.test.ts", "**/__tests__/**", "tests", "vitest.config.ts", "node_modules", "lib"]
}
